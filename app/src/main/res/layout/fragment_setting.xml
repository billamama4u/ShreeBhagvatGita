<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".View.Fragments.SettingFragment">

    <LinearLayout
        android:id="@+id/lltop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@+id/imageView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/clGita"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/llbhagvvatgita"
                android:layout_width="wrap_content"
                android:layout_height="65dp"
                android:gravity="center"
                android:padding="13dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="19.5dp"
                    android:layout_height="19.5dp"
                    android:src="@drawable/kalash" />

                <TextView
                    android:id="@+id/tvCapterNo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="2.6dp"
                    android:text="Shree Bhagvat Gita"
                    android:textColor="@color/orange"
                    android:textSize="26sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="19.5dp"
                    android:layout_height="19.5dp"
                    android:src="@drawable/kalash" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="26dp"
            android:layout_marginTop="65dp"
            android:clickable="true"
            android:elevation="2.6dp"
            android:focusable="true"
            app:cardCornerRadius="6.5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:id="@+id/SavedVerses"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/iv_settings"
                android:clickable="true"
                android:focusable="true"
                android:orientation="vertical"
                android:padding="6.5dp">

                <LinearLayout
                    android:id="@+id/savedChapters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/save_texts" />

                    <TextView
                        android:id="@+id/tvSavedChapter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="2.6dp"
                        android:layout_weight="0.8"
                        android:text="Saved Chapters"
                        android:textColor="@color/orange"
                        android:textSize="18.2sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/baseline_keyboard_arrow_right_24"
                        app:tint="@color/orange" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/savedVerses"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="13dp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/save" />

                    <TextView
                        android:id="@+id/tvSavedVerse"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginHorizontal="2.6dp"
                        android:layout_weight="0.8"
                        android:text="Saved Verses"
                        android:textColor="@color/orange"
                        android:textSize="18.2sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:layout_weight="0.1"
                        android:src="@drawable/baseline_keyboard_arrow_right_24"
                        app:tint="@color/orange" />

                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="0dp"
        android:layout_marginBottom="172dp"
        android:alpha="0.3"
        android:src="@drawable/verse_top_right"
        app:layout_constraintBottom_toTopOf="@+id/imageView3"
        app:layout_constraintStart_toStartOf="@+id/lltop"
        app:layout_constraintTop_toBottomOf="@+id/lltop" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="0dp"
        android:layout_height="260dp"
        android:layout_marginStart="75dp"
        android:layout_marginEnd="75dp"
        android:layout_marginBottom="44dp"
        android:alpha=".15"
        android:background="@android:color/transparent"
        android:scaleType="centerInside"
        android:src="@drawable/krsna"
        app:layout_constraintBottom_toBottomOf="@+id/imageView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_100sdp"
        android:layout_height="0dp"
        android:layout_marginStart="4dp"
        android:layout_marginBottom="69dp"
        android:alpha="0.3"
        android:src="@drawable/verse_bottom_left"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginHorizontal="2.6dp"
        android:layout_weight="0.8"
        android:text="We Hope You Enjoyed Our App....."
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="30dp"
        android:textColor="@color/orange"
        android:textSize="18.2sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvShowingMessage"
        android:layout_marginHorizontal="2.6dp"
        android:padding="3.9dp"
        android:textColor="@color/orange"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lltop"
        android:gravity="center"
        android:text="No internet connection \n Check for Saved chapters"
        android:textSize="22.2sp"
        android:visibility="gone"
        android:textStyle="bold"/>



</androidx.constraintlayout.widget.ConstraintLayout>